<h1>Editing Transaction</h1>

<%= form_for :transaction, url: transaction_path(@transaction), method: :patch do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :accounted_on %><br>
    <%= f.text_field :accounted_on %>
  </p>
  <p>
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation %>
  </p>
  <p>
    <%= f.label :transaction_type %>
    <%= f.text_field :transaction_type %>
  </p>
  <p>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end%>

