<h1>New Transaction</h1>

<%= form_for :transaction, url: transactions_path do |f| %>
  <p>
    <%= f.label :accounted_on %><br>
    <%= f.text_field :accounted_on %>
  </p>
  <p>
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation %>
  </p>
  <p>
    <%= f.label :transaction_type %><br>
    <%= f.text_field :transaction_type %>
  </p>
  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', transactions_path %>
